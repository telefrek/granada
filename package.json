{
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/*"
  ],
  "scripts": {
    "test": "jest --coverage",
    "format": "npx prettier --write .",
    "package": "npm run compile --workspaces --if-present",
    "upgrade-all": "npx npm-check-updates -u & npm install & npm run upgrade --workspaces --if-present"
  },
  "jest": {
    "projects": [
      "<rootDir>/jest.node.config.js",
      "<rootDir>/jest.jsdom.config.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "petstore-demo-app": "file:examples/petstore-demo-app"
  }
}
