{
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest --coverage -c jest.config.js",
    "test:integration": "jest --coverage -c jest.integration.config.js",
    "format": "npx prettier --write .",
    "ci": "npm install && npm run compile --workspaces --if-present && npm run test",
    "upgrade-all": "npx npm-check-updates -u && npm install && npm run upgrade --workspaces --if-present",
    "tsc-diagnostics": "tsc --extendedDiagnostics --diagnostics",
    "lint": "npx eslint . --fix"
  },
  "jest": {
    "projects": [
      "<rootDir>/jest.node.config.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.29",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
