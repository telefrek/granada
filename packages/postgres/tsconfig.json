{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./dist/**/*"],
  "paths": {
    "@telefrek/core": "../core",
    "@telefrek/core/*": "../core/*",
    "@telefrek/data": "../data",
    "@telefrek/data/*": "../data/*"
  },
  "references": [{ "path": "../core" }, { "path": "../data" }]
}
