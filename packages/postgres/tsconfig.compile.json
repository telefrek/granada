{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@telefrek/core": ["../core"],
      "@telefrek/core/*": ["../core/*"],
      "@telefrek/query": ["../data"],
      "@telefrek/query/*": ["../data/*"]
    }
  },
  "references": [{ "path": "../core" }, { "path": "../data" }],
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "./**/*.test.ts",
    "./**/*.integration.ts",
    "./**/testUtils.ts"
  ]
}
