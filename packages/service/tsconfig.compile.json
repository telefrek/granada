{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "diagnostics": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "resolvePackageJsonImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@telefrek/core": ["./packages/core"],
      "@telefrek/core/*": ["./packages/core/*"],
      "@telefrek/http": ["./packages/http"],
      "@telefrek/http/*": ["./packages/http/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "./**/*.test.ts",
    "./**/*.integration.ts",
    "./testUtils.ts"
  ],
  "references": [{ "path": "../core" }, { "path": "../http" }]
}
