{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./dist/**/*"],
  "paths": {
    "@telefrek/core": "../core",
    "@telefrek/core/*": "../core/*",
    "@telefrek/http": "../http",
    "@telefrek/http/*": "../http/*"
  },
  "references": [{ "path": "../core" }, { "path": "../http" }]
}
