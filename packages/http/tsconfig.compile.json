{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@telefrek/core": ["../core"],
      "@telefrek/core/*": ["../core/*"]
    }
  },
  "references": [{ "path": "../core" }],
  "include": ["./**/*.ts", "./content/mimeTypes.json"],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "./**/*.test.ts",
    "./**/*.integration.ts"
  ]
}
