{
  "exclude": ["**/*.test.ts", "node_modules", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "paths": {
      "@telefrek/*": ["./packages/*/"],
      "@examples/*": ["./examples/*/"]
    }
  }
}
