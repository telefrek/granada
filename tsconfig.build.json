{
    "exclude": [
        "**/*.test.ts",
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "paths": {
            "@telefrek/*": [
                "./packages/*/"
            ],
            "@examples/*": [
                "./examples/*/"
            ]
        }
    }
}