{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "diagnostics": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": false,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "resolvePackageJsonImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@telefrek/core": ["./packages/core"],
      "@telefrek/core/*": ["./packages/core/*"],
      "@telefrek/http": ["./packages/http"],
      "@telefrek/http/*": ["./packages/http/*"],
      "@telefrek/query": ["./packages/query"],
      "@telefrek/query/*": ["./packages/query/*"],
      "@telefrek/sql": ["./packages/sql"],
      "@telefrek/sql/*": ["./packages/sql/*"],
      "@telefrek/type-utils": ["./packages/type-utils"],
      "@telefrek/type-utils/*": ["./packages/type-utils/*"],
      "@telefrek/json": ["./packages/json"],
      "@telefrek/json/*": ["./packages/json/*"],
      "@telefrek/pipelines": ["./packages/pipelines"],
      "@telefrek/pipelines/*": ["./packages/pipelines/*"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/query" },
    { "path": "./packages/http" },
    { "path": "./packages/postgres" },
    { "path": "./packages/type-utils" },
    { "path": "./packages/sql" },
    { "path": "./packages/json" },
    { "path": "./packages/service" },
    { "path": "./packages/pipelines" }
  ],
  "include": ["./**/*.ts", "./packages/http/mimeTypes.json"],
  "exclude": ["node_modules", "dist"],
  "watchOptions": {
    "excludeDirectories": ["**/dist", "**/node_modules"]
  },
  "buildOptions": {
    "incremental": true
  }
}
