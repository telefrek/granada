{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["./**/*.ts", "./packages/http/mimeTypes.json"],
  "exclude": ["node_modules", "dist"],
  "watchOptions": {
    "excludeDirectories": ["**/dist", "**/node_modules"]
  },
  "buildOptions": {
    "incremental": true
  }
}
